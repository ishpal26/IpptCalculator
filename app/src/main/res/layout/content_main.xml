<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ishpal.ipptcalculator.MainActivity"
    tools:showIn="@layout/activity_main"
    android:background="#D32F2F">


    <Switch

        android:id="@+id/mySwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:switchPadding="50dp"
        android:longClickable="true"  
        android:checked="false"
        android:clickable="false"
        android:breakStrategy="high_quality"
        android:textColor="#FFEBEE"
        android:textSize="23dp"
        android:nestedScrollingEnabled="false"
        android:showText="true"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:textOff=" "
        android:textOn=" " />

    <!-- android:typeface="NotoSans-Regular.ttf"/> -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="GENDER"
        android:id="@+id/genderText"
        android:textColor="#FEEBEE"
        android:textSize="65dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="AGE"
        android:id="@+id/ageText"
        android:textColor="#FEEBEE"
        android:textSize="65dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/catSwitch"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CATEGORY"
        android:id="@+id/categoryText"
        android:textColor="#FEEBEE"
        android:textSize="65dp"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/mySwitch"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ageSeekBar"
        android:layout_marginTop="12dp"
        android:indeterminate="false"
        android:layout_below="@+id/ageProgress"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:thumb="@drawable/thumb" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Active"
        android:id="@+id/categoryProgress"
        android:textColor="#EF9A9A"
        android:textSize="20dp"
        android:layout_below="@+id/categoryText"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Text"
        android:id="@+id/ageProgress"
        android:textColor="#EF9A9A"
        android:textSize="20dp"
        android:layout_below="@+id/ageText"
        android:layout_centerHorizontal="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/catSwitch"
        android:checked="false"
        android:layout_below="@+id/categoryProgress"
        android:layout_alignLeft="@+id/mySwitch"
        android:layout_alignStart="@+id/mySwitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Male"
        android:id="@+id/textView"
        android:textColor="#EF9A9A"
        android:textSize="20dp"
        android:layout_below="@+id/genderText"
        android:layout_centerHorizontal="true" />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/nextFab"
        app:backgroundTint="#FEEBEE"
        android:src="@drawable/abc_ic_ab_next_mtrl_am_alpha_red"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/ageSeekBar"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
