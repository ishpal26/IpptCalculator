<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="ishpal.ipptcalculator.MaleDataEntry"
    tools:showIn="@layout/activity_male_data_entry"
    android:gravity="end">

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/mins"
        android:text="@string/min"
        android:layout_marginTop="27dp"
        android:textAlignment="textEnd"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="2.4 Running"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/mins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/secs"
        android:text=" sec"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/mins"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="32dp"
        android:layout_marginEnd="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sit Ups"
        android:id="@+id/textView3"
        android:layout_below="@+id/mins"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="76dp" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/sitUpReps"
        android:text=" reps"
        android:textAlignment="textEnd"
        android:layout_alignTop="@+id/textView3"
        android:layout_alignLeft="@+id/mins"
        android:layout_alignStart="@+id/mins" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Push Ups"
        android:id="@+id/textView4"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/pushUpReps"
        android:text=" reps"
        android:textAlignment="textEnd"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/sitUpReps"
        android:layout_alignStart="@+id/sitUpReps" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:id="@+id/calButton"
        android:layout_below="@+id/pushUpReps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="95dp" />

</RelativeLayout>
